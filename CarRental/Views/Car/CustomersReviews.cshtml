@model IEnumerable<Review>

@{
    ViewBag.Title = "Opinie";
    Layout = "_Layout";
}
<div class="row justify-content-around">
    <h2>@Model.FirstOrDefault().Car.Brand @Model.FirstOrDefault().Car.Model</h2>
    <h3>Średnia ocena: @String.Format("{0:0.00}", @Model.Average(o=>o.Rating))</h3>
    <h4>Opinie klientów:</h4>
</div>
<div class="row justify-content-center">
@foreach (var review in Model)
{
    <div class="col-md-5 bg-light text-black rounded-3 m-3">      
        <p>@review.Description</p>
        <p>Ocena: @review.Rating/5</p>
        <p> @review.userName </p>
    </div>
}
</div>